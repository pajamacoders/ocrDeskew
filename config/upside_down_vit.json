{
    "task":"orientaion_prediction",
    "train_cfg":{"max_epoch":801, "validation_every_n_epoch":5},
    "transform_cfg":{
        "Resize":{"scale":4},
        "RandomOrientation":{"ratio":0.5},
        "RandomRotation":{"ratio":0.5, "degree":5, "buckets":10},
        "Normalize":{"mean":0.0, "std":255.0},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":32,
        "valid_batch":1,
        "train":{
            "dataroot":"/home/train_data_v2/train/*"
        },
        "valid":{
            "dataroot":"/home/train_data_v2/valid/*"
        }
    },
    "model_cfg":{
        "type":"MobileViT",
        "args":{
            "image_size":[512,512],
            "dims":[64, 80, 96],
            "channels":[16, 16, 24, 24, 48, 48, 64, 64, 80, 80, 320],
            "num_classes":1,
            "expansion":2
        }
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-7
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
            "T_0":200,
            "eta_max":1e-4,
            "T_up":3,
            "gamma":0.5,    
            "last_epoch":-1
            }
    },
    "loss_cfg":{
        "type":"BCEWithLogitLoss"
    },
    "mllogger_cfg":
    {"exp_name":"ocr_orientation_prediction",
        "run_name":"RotationNetTest",
        "user_id": "pajama",
        "save_model_at_epoch":[400,600,700],
        "version":"1.1.0"
    }
}