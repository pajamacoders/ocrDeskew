{
    "task":"deskew",
    "train_cfg":{"max_epoch":41, "validation_every_n_epoch":5},
    "transform_cfg":{
        "Resize":{"scale":4},
        "RandomOrientation":{"ratio":0.5},
        "RandomRotation":{"ratio":0.5, "degree":90, "buckets":361},
        "Normalize":{"mean":0.0, "std":255.0},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":128,
        "valid_batch":4,
        "train":{
            "dataroot":"/home/train_data_v2/train/*"
        },
        "valid":{
            "dataroot":"/home/train_data_v2/valid/*"
        }
    },
    "model_cfg":{
        "type":"DeskewNetV4",
        "args":{"buckets":361, "last_fc_in_ch":128, "pretrained":"checkpoints/rot_range_90_correction_checkpoint.pth"}
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-6
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
        "T_0":40,
        "eta_max":1e-3,
        "T_up":2,
        "gamma":0.5,    
        "last_epoch":-1
        }
    },
    "loss_cfg":{
        "type":"FocalLoss"
    },
    "mllogger_cfg":
    {
        "exp_name":"ocr_deskew",
        "run_name":"resnetTest",
        "user_id": "pajamacoder",
        "save_model_at_epoch":[20,39],
        "version":"1.2.1"
    }
}