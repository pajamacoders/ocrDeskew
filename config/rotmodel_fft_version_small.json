{
    "train_cfg":{"max_epoch":801, "validation_every_n_epoch":5},
    "transform_cfg":{
        "Resize":{"scale":4},
        "RandomRotation":{"ratio":1, "degree":89, "buckets":356},
        "Normalize":{"mean":0.0, "std":255.0},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":128,
        "valid_batch":2,
        "train":{
            "dataroot":"/train_data/train/*"
        },
        "valid":{
            "dataroot":"/train_data/valid/*"
        }
    },
    "model_cfg":{
        "type":"DeskewNetV4",
        "args":{"buckets":356, "last_fc_in_ch":128}
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-8
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
        "T_0":200,
        "eta_max":1e-3,
        "T_up":1,
        "gamma":0.1,    
        "last_epoch":-1
        }
    },
    "loss_cfg":{
        "type":"CELoss"
    },
    "mllogger_cfg":
    {"exp_name":"ocr_deskew",
        "run_name":"resnetTest",
        "user_id": "pajamacoder",
        "save_model_at_epoch":[600,700,800],
        "version":"1.1.0"
    }
}