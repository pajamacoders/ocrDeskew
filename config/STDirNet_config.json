{
    "task":"DirectionPrediction",
    "train_cfg":{"max_epoch":100, "validation_every_n_epoch":5},
    "transform_cfg":{
        
        "ResizeBySize":{"size":[40,40]},
        "Translate":{"ratio":0.5, "tx":10, "ty":10},
        "GaussianNoise":{"ratio":0.5, "mean":0, "std":10},
        "RandomDirection":{"ratio":1}

    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":32,
        "valid_batch":1,
        "train":{
            "dataroot":"/font_dataset/train/*"
        },
        "valid":{
            "dataroot":"/font_dataset/train/*"
        }
    },
    "model_cfg":{
        "type":"MobileViT",
        "args":{
            "image_size":[512,512],
            "dims":[64, 80, 96],
            "channels":[16, 16, 24, 24, 48, 48, 64, 64, 80, 80, 320],
            "num_classes":1,
            "expansion":2,
            "pretrained":"checkpoints/upside_down_v1.0.pth"
        }
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-7
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
            "T_0":200,
            "eta_max":1e-4,
            "T_up":3,
            "gamma":0.5,    
            "last_epoch":-1
            }
    },
    "loss_cfg":{
        "type":"BCEWithLogitLoss"
    },
    "mllogger_cfg":
    {"exp_name":"ocr_orientation_prediction",
        "run_name":"RotationNetTest",
        "user_id": "pajama",
        "save_model_at_epoch":[400,600,700],
        "version":"1.1.0"
    }
}