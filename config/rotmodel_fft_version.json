{
    "train_cfg":{"max_epoch":800, "validation_every_n_epoch":5},
    "transform_cfg":{
        "Resize":{"scale":4},
        "RandomRotation":{"ratio":1, "degree":30, "buckets":120},
        "Normalize":{"mean":0.0, "std":255.0},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":128,
        "valid_batch":2,
        "train":{
            "dataroot":"/train_data/train/*"
        },
        "valid":{
            "dataroot":"/train_data/valid/*"
        }
    },
    "model_cfg":{
        "type":"DeskewNetV4",
        "args":{"buckets":120, "pretrained":"checkpoints/clssification_fft_4195e2_state_dict.pth"}
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-7
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
        "T_0":200,
        "eta_max":1e-3,
        "T_up":2,
        "gamma":0.5,    
        "last_epoch":-1
        }
    },
    "loss_cfg":{
        "type":"MSELoss"
    },
    "mllogger_cfg":
    {"exp_name":"ocr_deskew",
        "run_name":"resnetTest",
        "user_id": "pajamacoder",
        "version":"1.0.0"
    }
}