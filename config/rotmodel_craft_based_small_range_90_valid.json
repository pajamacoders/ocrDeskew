{
    "task":"deskew",
    "train_cfg":{"max_epoch":81, "validation_every_n_epoch":5},
    "transform_cfg":{
        "ResizeAspectRatio":{"square_size":1280,"mag_ratio":1.5},
        "RandomRotation":{"ratio":0.5, "degree":90, "buckets":360},
        "NormalizeMeanStd":{},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset3ch",
        "train_batch":32,
        "valid_batch":8,
        "train":{
            "dataroot":"/train_data/train/*"
        },
        "valid":{
            "dataroot":"/train_data/valid/*"
        }
    },
    "feature_ext_model_cfg":{
        "type": "CRAFT", 
        "args":{"craft_pretrained":"checkpoints/craft_mlt_25k.pth"}
    },
    "model_cfg":{
        "type":"DeskewNetV6",
        "args":{"buckets":360,"last_fc_in":147456, "last_fc_in_ch":128, "pretrained":"checkpoints/craft_score_x_in_img_90.pth"}
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-6
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
        "T_0":40,
        "eta_max":1e-4,
        "T_up":2,
        "gamma":0.1,    
        "last_epoch":-1
        }
    },
    "loss_cfg":{
        "type":"FocalLoss"
    },
    "mllogger_cfg":
    {
        "exp_name":"ocr_deskew",
        "run_name":"resnetTest",
        "user_id": "pajamacoder",
        "save_model_at_epoch":[40,80],
        "version":"1.2.1"
    }
}