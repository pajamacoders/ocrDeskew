{
    "task":"orientaion_prediction",
    "train_cfg":{"max_epoch":100, "validation_every_n_epoch":5},
    "transform_cfg":{
        "Resize":{"scale":4},
        "RandomOrientation":{"ratio":0.5},
        "RandomRotation":{"ratio":0, "degree":5, "buckets":4},
        "Normalize":{"mean":0.0, "std":255.0},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":128,
        "valid_batch":1,
        "train":{
            "dataroot":"/train_data/train/*"
        },
        "valid":{
            "dataroot":"/train_data/valid/*"
        }
    },
    "model_cfg":{
        "type":"RotationNet",
        "args":{"pretrained":"checkpoints/v101_upside_down_state_dict.pth"}
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-6
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
            "T_0":30,
            "eta_max":1e-3,
            "T_up":3,
            "gamma":0.2,    
            "last_epoch":-1
            }
    },
    "loss_cfg":{
        "type":"BCEWithLogitLoss"
    },
    "mllogger_cfg":
    {"exp_name":"ocr_orientation_prediction",
        "run_name":"RotationNetTest",
        "user_id": "pajamacoder",
        "save_model_at_epoch":[30,60,90,100],
        "version":"1.0.1"
    }
}