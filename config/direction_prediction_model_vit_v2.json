{
    "task":"orientaion_prediction",
    "train_cfg":{"max_epoch":81, "validation_every_n_epoch":5},
    "transform_cfg":{
        "Resize":{"scale":4},
        "RandomDirection":{"ratio":1, "directions":[-90,0,90,180]},
        "RandomRotation":{"ratio":0.5, "degree":3, "buckets":13},
        "Normalize":{"mean":0.0, "std":255.0},
        "Shaper":{}
    },
    "dataset_cfg":{
        "type":"OCRDataset",
        "train_batch":32,
        "valid_batch":16,
        "train":{
            "dataroot":"/home/train_data_v2/train/*"
        },
        "valid":{
            "dataroot":"/home/train_data_v2/valid/*"
        }
    },
    "model_cfg":{
        "type":"MobileViT",
        "args":{
            "image_size":[512,512],
            "dims":[64, 80, 96],
            "channels":[16, 16, 24, 24, 48, 48, 64, 64, 80, 80, 320],
            "num_classes":4,
            "expansion":2
        }
    },
    "optimizer_cfg":{
        "type":"Adam",
        "args":{
            "lr":1e-7
            }
        },
    "lr_scheduler_cfg":{
        "type":"CosineAnnealingWarmUpRestarts",
        "args":{
            "T_0":40,
            "eta_max":1e-4,
            "T_up":3,
            "gamma":0.5,    
            "last_epoch":-1
            }
    },
    "loss_cfg":{
        "type":"focal_loss"
    },
    "mllogger_cfg":
    {"exp_name":"ocr_direction_prediction",
        "run_name":"DirectionPrediction",
        "user_id": "pajama",
        "save_model_at_epoch":[40,80],
        "version":"1.3.0"
    }
}